{
    "openapi": "3.0.0",
    "info": {
        "title": "Delivery Management System API",
        "version": "1.0.0",
        "description": "Swagger documentation for Delivery Management System with authentication and role-based routes."
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "paths": {
        "/api/signup": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "User Sign Up",
                "description": "Creates a new user with role (admin, driver, user).",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "email",
                                    "phone",
                                    "role",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Yogesh Bishnoi"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "yogesh63676@gmail.com"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "9509356589"
                                    },
                                    "role": {
                                        "type": "string",
                                        "enum": [
                                            "ADMIN",
                                            "CAPTAIN",
                                            "USER"
                                        ],
                                        "example": "USER"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "User@1234"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Sign up successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "User already exists"
                    }
                }
            }
        },
        "/api/signin": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "User Sign In",
                "description": "Authenticates a user and returns a JWT token.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "email",
                                    "password",
                                    "role"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "yogesh63676@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "User@1234"
                                    },
                                    "role": {
                                        "type": "string",
                                        "enum": [
                                            "ADMIN",
                                            "CAPTAIN",
                                            "USER"
                                        ],
                                        "example": "USER"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/api/activeORinactive": {
            "post": {
                "tags": [
                    "Captain"
                ],
                "summary": "Activate or deactivate captain",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "ACTIVE",
                                            "INACTIVE"
                                        ]
                                    }
                                },
                                "required": [
                                    "status"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Status updated successfully"
                    }
                }
            }
        },
        "/api/pickOrder": {
            "post": {
                "tags": [
                    "Captain"
                ],
                "summary": "Pick an order and create route",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "orderId": {
                                        "type": "string",
                                        "example": "6824da571009365d7fd56df2"
                                    },
                                    "location": {
                                        "type": "string",
                                        "example": "{ lat: 40.7128, lng: -74.0060 }"
                                    }
                                },
                                "required": [
                                    "orderId",
                                    "location"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Order picked successfully"
                    },
                    "404": {
                        "description": "Order not found"
                    }
                }
            }
        },
        "/api/addSteps": {
            "post": {
                "tags": [
                    "Captain"
                ],
                "summary": "Add a step to route (location update)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "routeId": {
                                        "type": "string",
                                        "example": "6824df6a760e353e87ea63d5"
                                    },
                                    "location": {
                                        "type": "string",
                                        "example": "{ lat: 40.7128, lng: -74.0060 }"
                                    }
                                },
                                "required": [
                                    "routeId",
                                    "location"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Route updated successfully"
                    },
                    "404": {
                        "description": "Route not found"
                    }
                }
            }
        },
        "/api/orderDelivered": {
            "post": {
                "tags": [
                    "Captain"
                ],
                "summary": "Mark order as delivered",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "orderId": {
                                        "type": "string",
                                        "example": "6824da571009365d7fd56df2"
                                    }
                                },
                                "required": [
                                    "orderId"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Order marked as delivered"
                    },
                    "404": {
                        "description": "Order not found"
                    }
                }
            }
        },
        "/api/captainPayment": {
            "get": {
                "tags": [
                    "Captain"
                ],
                "summary": "Calculate captain's payment",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns payment details"
                    }
                }
            }
        },
        "/api/orders": {
            "get": {
                "tags": [
                    "Captain"
                ],
                "summary": "Order's that captain can pick",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Return orders"
                    }
                }
            }
        },
        "/api/placeOrder": {
            "post": {
                "tags": [
                    "Orders"
                ],
                "summary": "Place a new order",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "productId": {
                                        "type": "string",
                                        "example": "6824d9e51009365d7fd56deb"
                                    },
                                    "address": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "productId",
                                    "address"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Order placed successfully"
                    },
                    "404": {
                        "description": "Product not found"
                    }
                }
            }
        },
        "/api/cancelOrder": {
            "post": {
                "tags": [
                    "Orders"
                ],
                "summary": "Cancel an existing order",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "orderId": {
                                        "type": "string",
                                        "example": "6824da571009365d7fd56df2"
                                    }
                                },
                                "required": [
                                    "orderId"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Order canceled successfully"
                    },
                    "404": {
                        "description": "Order not found"
                    }
                }
            }
        },
        "/api/orderHistory": {
            "get": {
                "tags": [
                    "Orders"
                ],
                "summary": "Get order history for the logged-in user",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Order history retrieved successfully"
                    }
                }
            }
        },
        "/api/products": {
            "get": {
                "tags": [
                    "Orders"
                ],
                "summary": "Get products for the logged-in user",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Products found successfully"
                    }
                }
            }
        },
        "/api/addProduct": {
            "post": {
                "tags": [
                    "Admin"
                ],
                "summary": "Add a new product",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "productName": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "number",
                                        "example": 100
                                    }
                                },
                                "required": [
                                    "productName",
                                    "description",
                                    "price"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Product added successfully"
                    }
                }
            }
        },
        "/api/adminCaptainPayment": {
            "post": {
                "tags": [
                    "Admin"
                ],
                "summary": "Calculate captain's total income",
                "description": "Returns the captainâ€™s total earnings based on order data",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "captainId": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "captainId"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Captain payment calculated successfully"
                    }
                }
            }
        }
    }
}